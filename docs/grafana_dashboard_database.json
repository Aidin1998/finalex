{
  "dashboard": {
    "title": "Database Performance Dashboard",
    "panels": [
      {
        "type": "graph",
        "title": "Query Latency (P95)",
        "targets": [{"expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (le))"}],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Cache Hit Rate",
        "targets": [{"expr": "db_cache_hit_rate"}],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Open DB Connections",
        "targets": [{"expr": "pincex_db_open_connections"}],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Replication Lag (s)",
        "targets": [{"expr": "db_replication_lag_seconds"}],
        "datasource": "Prometheus"
      }
    ]
  }
}
